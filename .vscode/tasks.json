{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",                            //More freedom than extenion's cppbuild
            "label": "C: make build",
            "command": "make",
            "args": ["all"],

            "options": {
                "cwd": "${workspaceFolder}/source-code/backend"             //Involves VSC to show errors in Problem Panels
            }, 

            "problemMatcher": [
                "$gcc"
            ],
            
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}


