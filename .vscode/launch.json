{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C backend",
            "type": "cppdbg",                                            //It uses the extension's debug
            "request": "launch",                                         
            "program": "${workspaceFolder}/source-code/backend/bin/main", //Path of the executable to be launched in debug mode
            "args": [],
            "stopAtEntry": false,                                        //It doesn't stop before main
            "cwd": "${workspaceFolder}/source-code/backend",
            "environment": [],
            "externalConsole": false,                                    //It doesn't open a new terminal window
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C: make build"               //It must be equal to label in tasks.json  
        }
    ]
}
